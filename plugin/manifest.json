{
  "manifest_version": 2,
  "name": "Seek Control",
  "version": "1.0",
  "description": "Start and pause seeking with a button.",
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "icons/*.*"
  ]
}